datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          Int          @id @default(autoincrement())
  title       String
  description String?
  price       Float
  material    String?
  thickness   Float?
  nucleo      String?
  balance     Float?
  form        String?
  rating      Float?
  stock       Int
  brand       String?
  thumbnail   String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  orders      OrderProduct[]
}

model Users {
  id             Int      @id @default(autoincrement())
  username       String   @unique
  email          String   @unique
  phoneNumber    String?
  password       String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  orders         Order[]  
}

model Order {
  id          Int          @id @default(autoincrement())
  user        Users        @relation(fields: [userId], references: [id])
  userId      Int
  totalAmount Float
  status      String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  products    OrderProduct[] 
}

model OrderProduct {
  order      Order   @relation(fields: [orderId], references: [id])
  orderId    Int
  product    Product @relation(fields: [productId], references: [id])
  productId  Int
  quantity   Int     // AÃ±ade este campo para almacenar la cantidad del producto en la orden

  @@id([orderId, productId]) 
}
